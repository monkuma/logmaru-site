---
import Footer from "../components/Footer.astro";
import Header from "../components/Header.astro";
import logoPng from "../assets/logo.png";
import type { Locale } from "../data/site";
import {
  buildAbsoluteUrl,
  defaultDescriptions,
  getLocalizedPath,
  normalizeLocalizedPath
} from "../lib/seo";

interface Props {
  locale: Locale;
  title: string;
  description?: string;
  ogType?: "website" | "article";
  structuredData?: Record<string, unknown> | Array<Record<string, unknown>>;
}

const {
  locale,
  title,
  description,
  ogType = "website",
  structuredData
} = Astro.props;
const resolvedDescription = description ?? defaultDescriptions[locale];

const siteUrl = import.meta.env.PUBLIC_SITE_URL || Astro.site?.toString();

if (!siteUrl) {
  throw new Error("PUBLIC_SITE_URL must be configured to generate SEO URLs.");
}

const normalizedPath = normalizeLocalizedPath(Astro.url.pathname);
const canonicalPath = getLocalizedPath(locale, normalizedPath);
const canonicalUrl = buildAbsoluteUrl(siteUrl, canonicalPath);
const enUrl = buildAbsoluteUrl(siteUrl, getLocalizedPath("en", normalizedPath));
const jaUrl = buildAbsoluteUrl(siteUrl, getLocalizedPath("ja", normalizedPath));
const enPath = getLocalizedPath("en", normalizedPath);
const jaPath = getLocalizedPath("ja", normalizedPath);
const jsonLd = structuredData ? JSON.stringify(structuredData) : null;
---

<!doctype html>
<html lang={locale}>
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{title}</title>
    <link rel="icon" type="image/png" href={logoPng.src} />
    <meta name="description" content={resolvedDescription} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={resolvedDescription} />
    <meta property="og:url" content={canonicalUrl} />
    <meta property="og:type" content={ogType} />
    <link rel="canonical" href={canonicalUrl} />
    <link rel="alternate" hreflang="en" href={enUrl} />
    <link rel="alternate" hreflang="ja" href={jaUrl} />
    <link rel="alternate" hreflang="x-default" href={enUrl} />
    {jsonLd && <script type="application/ld+json" set:html={jsonLd} />}
  </head>
  <body>
    <Header locale={locale} enPath={enPath} jaPath={jaPath} />
    <main class="container">
      <slot />
    </main>
    <div class="container">
      <Footer locale={locale} />
    </div>
  </body>
</html>

<style is:global>
  :root {
    color-scheme: light;
    --bg: #fef4e4;
    --text: #33312f;
    --text-soft: rgba(51, 49, 47, 0.78);
    --line: rgba(51, 49, 47, 0.15);
    --button: #33312f;
    --button-hover: #272523;
    --button-text: #fef4e4;
  }

  * {
    box-sizing: border-box;
  }

  body {
    margin: 0;
    font-family: "Inter", "Segoe UI", system-ui, -apple-system, sans-serif;
    color: var(--text);
    background: var(--bg);
    line-height: 1.65;
  }

  .container {
    width: min(960px, 92vw);
    margin: 0 auto;
  }

  h1 {
    font-size: clamp(2.3rem, 4vw, 2.7rem);
    line-height: 1.1;
    letter-spacing: -0.02em;
    margin: 0;
  }

  h2 {
    font-size: clamp(1.5rem, 2.8vw, 1.75rem);
    line-height: 1.2;
    margin: 0;
  }

  h3 {
    line-height: 1.25;
    margin: 0;
  }

  .page-title {
    margin-top: 2.5rem;
    margin-bottom: 1rem;
  }

  .section {
    padding: 3rem 0;
  }

  .section + .section {
    border-top: 1px solid rgba(51, 49, 47, 0.15);
  }

  .card-list {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(220px, 1fr));
    gap: 1.2rem;
    padding: 0;
    list-style: none;
    margin: 0;
  }

  .card {
    border: 1px solid rgba(51, 49, 47, 0.15);
    border-radius: 8px;
    padding: 1.1rem;
    background: #fffaf2;
  }

  .button {
    display: inline-flex;
    align-items: center;
    gap: 0.55rem;
    padding: 0.72rem 1.15rem;
    border-radius: 6px;
    text-decoration: none;
    background: var(--button);
    color: var(--button-text);
    font-weight: 600;
    border: 1px solid transparent;
    transition: opacity 120ms ease;
  }

  .button:hover {
    opacity: 0.9;
  }

  .button:focus-visible {
    outline: 2px solid rgba(51, 49, 47, 0.5);
    outline-offset: 2px;
  }

  .muted {
    color: var(--text-soft);
  }

  p {
    font-size: 1rem;
    margin: 0;
  }

  @media (max-width: 720px) {
    .section {
      padding: 2.2rem 0;
    }
  }
</style>

<style is:global>
  .hero {
    text-align: center;
    padding-top: 4rem;
    padding-bottom: 2.5rem;
  }

  .hero-logo {
    font-size: 0.95rem;
    letter-spacing: 0.06em;
    text-transform: uppercase;
    color: var(--text-soft);
    margin-bottom: 1rem;
  }

  .hero-title {
    display: grid;
    gap: 0.12em;
    justify-items: center;
    font-weight: 600;
    font-size: clamp(2.75rem, 4.8vw, 3rem);
    line-height: 1.2;
  }

  .hero-title span {
    display: block;
  }

  .hero p {
    max-width: 600px;
    margin: 1.2rem auto 0;
    font-size: 1.02rem;
    line-height: 1.7;
  }

  .hero .button {
    margin-top: 1.5rem;
  }

  .hero .muted {
    margin-top: 1rem;
    font-size: 0.95rem;
  }

  .hero-split {
    text-align: left;
    display: grid;
    grid-template-columns: minmax(0, 1.45fr) minmax(260px, 1fr);
    gap: 2.25rem;
    align-items: center;
  }

  .hero-split .hero-copy {
    display: grid;
    gap: 0.9rem;
  }

  .hero-split .hero-logo {
    margin-bottom: 0;
  }

  .hero-split .hero-title {
    justify-items: start;
  }

  .hero-split h2 {
    font-size: clamp(1.12rem, 2.1vw, 1.28rem);
    line-height: 1.45;
  }

  .hero-split p {
    max-width: none;
    margin: 0;
  }

  .hero-split .hero-action {
    justify-self: end;
    border: 1px solid var(--line);
    border-radius: 10px;
    background: #fffaf2;
    padding: 1.25rem;
    display: grid;
    gap: 0.8rem;
  }

  .hero-split .button,
  .hero-split .muted {
    margin-top: 0;
  }

  .screenshot-wrap {
    text-align: center;
    padding-top: 1.8rem;
    padding-bottom: 1.8rem;
  }

  .screenshot-frame {
    width: min(900px, 100%);
    margin: 0 auto;
    border: 1px solid rgba(51, 49, 47, 0.15);
    border-radius: 8px;
    min-height: 380px;
    display: grid;
    place-items: center;
    color: var(--text-soft);
    background: #fff9ef;
    box-shadow: 0 3px 8px rgba(51, 49, 47, 0.04);
  }

  .features-title,
  .simple-steps h2 {
    text-align: center;
    margin-bottom: 1.5rem;
  }

  .features-list {
    display: grid;
    grid-template-columns: repeat(3, minmax(0, 1fr));
    gap: 2rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .feature h3 {
    font-size: 1.1rem;
    margin-bottom: 0.45rem;
    font-weight: 600;
  }

  .feature p {
    font-size: 0.98rem;
    color: var(--text-soft);
    line-height: 1.7;
  }

  .windows-icon {
    width: 16px;
    height: 16px;
    fill: currentColor;
    flex: 0 0 auto;
  }

  .simple-steps {
    text-align: left;
  }

  .step-list {
    display: grid;
    gap: 1.6rem;
    margin: 0;
    padding: 0;
    list-style: none;
  }

  .step-row {
    display: grid;
    grid-template-columns: minmax(0, 1fr) minmax(0, 1fr);
    gap: 2rem;
    align-items: center;
  }

  .step-image-placeholder {
    aspect-ratio: 16 / 9;
    width: 100%;
    border-radius: 8px;
    border: 1px solid rgba(51, 49, 47, 0.2);
    background: rgba(51, 49, 47, 0.08);
    display: grid;
    place-items: center;
    color: rgba(51, 49, 47, 0.75);
    font-size: 0.92rem;
  }

  .step-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 8px;
    display: block;
  }

  .step-meta {
    display: grid;
    gap: 0.5rem;
  }

  .step-number {
    font-size: 0.9rem;
    color: var(--text-soft);
  }

  .step-meta h3 {
    font-size: 1.1rem;
    margin: 0;
    font-weight: 600;
  }

  .download-section {
    border: 1px solid var(--line);
    border-radius: 10px;
    background: #fffaf2;
    padding: 2.4rem;
    display: grid;
    gap: 1.25rem;
  }

  .download-heading {
    margin: 0;
  }

  .download-version {
    font-size: 1.1rem;
    margin-top: 0.1rem;
  }

  .download-cta {
    margin-top: 0.35rem;
    margin-bottom: 0.3rem;
  }

  .download-button {
    min-width: 220px;
    justify-content: center;
  }

  .download-meta {
    margin: 0;
    padding: 0;
    display: grid;
    gap: 0.85rem;
  }

  .download-meta-row {
    display: grid;
    grid-template-columns: 130px minmax(0, 1fr);
    gap: 0.75rem;
    align-items: baseline;
    padding-bottom: 0.65rem;
    border-bottom: 1px dashed var(--line);
  }

  .download-meta-row dt {
    color: var(--text-soft);
    font-size: 0.94rem;
  }

  .download-meta-row dd {
    margin: 0;
  }

  .download-meta code {
    display: inline-block;
    max-width: 100%;
    overflow-wrap: anywhere;
    font-size: 0.87rem;
    background: rgba(51, 49, 47, 0.08);
    padding: 0.2rem 0.38rem;
    border-radius: 4px;
  }

  .download-releases {
    color: var(--text-soft);
    font-size: 0.95rem;
    margin-top: 0.2rem;
  }

  .download-releases a {
    color: inherit;
    text-underline-offset: 2px;
    word-break: break-all;
  }

  @media (max-width: 720px) {
    .download-section {
      padding: 1.75rem;
    }

    .download-button {
      width: 100%;
      min-width: 0;
    }

    .download-meta-row {
      grid-template-columns: 1fr;
      gap: 0.25rem;
    }
  }

  .step-meta p {
    font-size: 1rem;
    line-height: 1.65;
    color: var(--text-soft);
  }

  @media (max-width: 860px) {
    .features-list {
      grid-template-columns: 1fr;
      gap: 1.8rem;
    }

    .hero {
      padding-top: 3.2rem;
      padding-bottom: 2rem;
    }

    .step-row {
      grid-template-columns: 1fr;
      gap: 1rem;
    }

    .hero-split {
      grid-template-columns: 1fr;
      gap: 1.25rem;
    }

    .hero-split .hero-action {
      justify-self: start;
      width: 100%;
      max-width: 360px;
    }
  }

</style>
